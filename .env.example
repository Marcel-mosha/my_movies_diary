# Environment Variables Template
# Copy this file to .env and fill in your values

# ======================
# DJANGO CONFIGURATION
# ======================

# Set to False in production, True for development
DEBUG=False

# Generate a strong secret key using:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_KEY=your-secret-key-here-generate-a-secure-one

# Comma-separated list of allowed hosts (include your domain and www subdomain)
ALLOWED_HOSTS=moviediary.live,www.moviediary.live

# ======================
# DATABASE CONFIGURATION
# ======================

# PostgreSQL database name
DB=movies

# PostgreSQL username
DB_USER=postgres

# PostgreSQL password (use a strong password in production)
DB_PASSWORD=changeme-use-strong-password-in-production

# Database host (use 'db' for Docker)
DB_HOST=db

# Database port
DB_PORT=5432

# ======================
# CORS & CSRF SETTINGS
# ======================

# Comma-separated list of allowed origins for CORS
# Use HTTPS URLs in production!
CORS_ALLOWED_ORIGINS=https://moviediary.live,https://www.moviediary.live

# Comma-separated list of trusted origins for CSRF protection
# Use HTTPS URLs in production!
CSRF_TRUSTED_ORIGINS=https://moviediary.live,https://www.moviediary.live

# ======================
# TMDB API CONFIGURATION
# ======================

# Your TMDB API key (get it from https://www.themoviedb.org/settings/api)
API_KEY=your-tmdb-api-key-here

# TMDB movie endpoint
MOVIE_ENDPOINT=https://api.themoviedb.org/3/search/movie

# ======================
# PRODUCTION NOTES
# ======================
# 1. Never commit .env file to version control
# 2. Use strong, random passwords for production
# 3. Use HTTPS URLs for CORS_ALLOWED_ORIGINS and CSRF_TRUSTED_ORIGINS
# 4. Keep DEBUG=False in production
